<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.ProductTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <!--        <item name="android:textSize">24sp</item>-->
    </style>

    <style name="alert_dialog_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="borderWidth">1dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="search_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="startIconTint">@color/white</item>-->
        <item name="boxBackgroundColor">#f5f6f7</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <!--        <item name="hintTextColor">@color/primaryColor</item>-->
        <item name="android:textSize">15sp</item>

        <item name="hintTextAppearance">@style/hint</item>
        <item name="shapeAppearance">@style/shape_search_bar</item>
        <!--        <item name="android:textColorHint">@color/primaryColor</item>-->
        <item name="fontFamily">@font/righteous</item>
        <item name="android:fontFamily">@font/righteous</item>

    </style>

    <style name="hint">
        <item name="android:textSize">13sp</item>
        <!--        <item name="android:textColor">@color/primaryColor</item>-->
        <item name="fontFamily">@font/righteous</item>
        <item name="android:fontFamily">@font/righteous</item>
    </style>

    <style name="shape_search_bar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="app_bar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:textAppearance">@style/app_title</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primaryDarkColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.NavigationView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="app_title">
        <item name="fontFamily">@font/righteous</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="color">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="titleTextColor">@color/primaryColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="search_title">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="color">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="titleTextColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.MaterialComponents.Headline6">

    </style>

    <style name="Widget.Theme.Shopgeo.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>